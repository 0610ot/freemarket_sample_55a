.items-box
  =link_to item_path(:id), class: 'items-box__link' do
    .items-photo
      = image_tag item.item_images[0].image.url, class: 'items-photo__size'
    .items-body
      %h3.items-body__font
        = item.name
      .items-price
        .items-price__num
          = number_to_currency(item.price, :locale => 'jp')
          .items-good
            = fa_icon "heart-o", class:"items-good__heart" do
              14
